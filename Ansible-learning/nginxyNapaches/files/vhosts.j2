<VirtualHost {{ apache_ip }}:{{http_port}}>
    ServerName {{name_server}}
    DocumentRoot /var/www/{{ name_server }}
    ErrorLog ${APACHE_LOG_DIR}/{{name_server}}_error.log
    CustomLog ${APACHE_LOG_DIR}/{{name_server}}_access.log combined

    <Directory /var/www/{{ name_server }}>
          AllowOverride All
          Require all granted
    </Directory>

    <IfModule mod_dir.c>
        DirectoryIndex index.php index.html index.cgi index.pl  index.xhtml index.htm
    </IfModule>

</VirtualHost>
